@inject IRepositorio repositorio;

    
        <div class="card border-info">
            <img src="https://res.cloudinary.com/joaquin2000cortes/image/upload/v1592973136/Pan-casero-f%C3%A1cil_n6evb5.webp" class="card-img-top" alt="...">
            <div class="card-body">

                <h5 class="card-title">@Nombre</h5>
                <p class="card-text">El stock es de: @Cantidad unidades</p>
                <p class="card-text">Precio de $@Precio</p>
                <a href="#" class="btn btn-primary w-100">Agregar al carro</a>
                <br /> 
                <br />
                <a href="#" class="btn btn-primary w-100">Agregar a cotización</a>
            </div>
        </div>


        @code {
            [Parameter]
            public string Nombre { get; set; }
            [Parameter]
            public string Precio { get; set; }
            [Parameter]
            public int Cantidad { get; set; }

        }
